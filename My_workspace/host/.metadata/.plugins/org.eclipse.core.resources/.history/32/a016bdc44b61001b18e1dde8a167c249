#include <stdio.h>
#include <stdint.h>

#define BYTE_TO_BINARY_PATTERN "%c%c%c%c%c%c%c%c"
#define BYTE_TO_BINARY(byte)  \
  (byte & 0x80 ? '1' : '0'), \
  (byte & 0x40 ? '1' : '0'), \
  (byte & 0x20 ? '1' : '0'), \
  (byte & 0x10 ? '1' : '0'), \
  (byte & 0x08 ? '1' : '0'), \
  (byte & 0x04 ? '1' : '0'), \
  (byte & 0x02 ? '1' : '0'), \
  (byte & 0x01 ? '1' : '0')

void exerciseOne();

int main(){

	exerciseOne();
}

void exerciseOne(){
	int32_t num1, num2;

	printf("Enter two 8 bit numbers: ");
	scanf("%d %d", &num1, &num2);
	printf("You entered "BYTE_TO_BINARY_PATTERN" (%d) and "BYTE_TO_BINARY_PATTERN" (%d)\n", BYTE_TO_BINARY(num1), num1, BYTE_TO_BINARY(num2), num2);

	int32_t bitwiseAnd = num1 & num2;
	printf("Bitwise &: "BYTE_TO_BINARY_PATTERN" (%d)", BYTE_TO_BINARY(bitwiseAnd), bitwiseAnd);
}

